{{#md-card title=product.name
    titleClass="orange-text"
    image=product.imageUrl classNames='product-item'}}
    {{#md-card-content}}
      {{product.description}}
    {{/md-card-content}}

    {{#md-card-action}}
      {{md-btn icon='fa fa-edit'
        action='edit' buttonType='floating'
        class='btn-large blue'}}

      {{md-btn
        icon='fa fa-times'
        action='delete' buttonType='floating'
        class='btn-large pull-right red'}}
    {{/md-card-action}}
{{/md-card}}