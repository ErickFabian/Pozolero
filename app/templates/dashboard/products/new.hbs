<h1>New Product</h1>

<form class="text-center" {{action 'create' on='submit'}}>
  <div class="row">
    <div class="col s12 m6 l4">
      <fieldset>
        <legend>Product Image</legend>
        <div class="row">
          <div class="col s12">
            <div class="image-trigger pull-right">
              <a href="#" {{action 'upload' }}>
                <i class="fa fa-2x fa-plus-circle" aria-hidden="true"></i>
              </a>
            </div>
          </div>
        </div>
        <div class="preview" style="min-height: 60px;min-width: 50px">
          <div class="row center-align valign-wrapper">
            <div class="col 12 valign">
              {{products/product-image product=product}}
            </div>
          </div>
          <div class="row">
            <div class="col 12">
              {{file-upload id='productImage'
                class="hide"
                attribute=product.image
                attributeUrl=product.imageUrl
                accept='image/*'}}
            </div>
          </div>

        </div>
      </fieldset>
    </div>
    <div class="col s12 m6 l8">
      <div class="row">
        <div class="col s12">
          {{md-input value=product.name label='Nombre' type="text" class="col s12" validate=true}}
          {{md-input value=product.cost label='Cost' type="number" class="col s12" validate=true}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        {{md-textarea value=product.description label='Description'  class="col s12"}}
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>
