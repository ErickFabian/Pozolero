<form class="text-center" {{action 'create' on='submit'}}>
  <div class="row">
    <div class="col s12 m6">
      {{md-select content=clients
        value=order.client
        label="Client"
        prompt="Please choose..."
        optionLabelPath="content.fullName"
        optionValuePath="order.client" class="col s12"}}
    </div>
    <div class="col s12 m6">
      {{md-select content=orderTypes
        value=order.type
        label="Order Type"
        prompt="Please choose..."class="col s12"}}
    </div>
  </div>
  <div class="row">
    {{#each products as |product|}}
      <div class="col l3 m6 s12">
        {{orders/order-item product=product order=order}}
      </div>
    {{/each}}
  </div>
  <div class="row">
    <div class="col s12">
      {{md-textarea value=order.note label='Note'  class="col s12"}}
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>
