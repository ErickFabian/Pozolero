<div class="wrapper">
  <div class="row">
    <div class="col s12">
      <table>
        <thead>
          <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Costo Unitario</th>
            <th>Costo Total</th>
          </tr>
        </thead>
        <tbody>
          {{#each order.orderItems as |orderItem|}}
            <tr>
              <td>
                {{orderItem.product.name}}
              </td>
              <td>
                {{orderItem.quantity}}
              </td>
              <td>
                {{orderItem.product.cost}}
              </td>
              <td>
                {{orderItem.cost}}
              </td>
            </tr>
          {{/each}}
        </tbody>
        <tfoot>
          <tr>
            <td colspan="3">
              <h5>
                Total:
              </h5>
            </td>
            <td>
              {{orderTotal}}
            </td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</div>