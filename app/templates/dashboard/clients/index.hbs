<div class="page-title mb-15">
  <h4 class="mb-5">
    Clients
    <span class="pull-right">
      {{#link-to 'dashboard.clients.new'}}
        Add new Client
      {{/link-to}}
    </span>
  </h4>
</div>

<div class="row">
  <div class="col s12">
    {{#md-table content=clients class='bordered striped' as |client|}}
      {{md-table-col row=client valueBindingPath='id'}}
      {{md-table-col row=client valueBindingPath='firstName'}}
      {{md-table-col row=client valueBindingPath='lastName'}}
      {{md-table-col row=client valueBindingPath='phoneNumber'}}
      {{md-table-col row=client valueBindingPath='address'}}
      {{#md-table-col row=client key='name' header='Actions'}}
        {{md-btn icon='fa fa-edit'
          action='edit' actionArg=client buttonType='floating'
          class='btn-large blue'
        }}

        {{md-btn icon='fa fa-times'
          action='delete' actionArg=client buttonType='floating'
          class='btn-large red pull-right'
        }}
      {{/md-table-col}}
    {{/md-table}}
  </div>
</div>
