<h1>Sign in</h1>

<form class="text-center" {{action 'authAction' model on='submit'}}>
  <div class="row">
    <div class="col s12">
      {{#if alertMessage}}
        {{alert-message
          message=alertMessage
          type=alertType}}
      {{/if}}
    </div>
    <div class="col s12">
      {{form-input
        label='email'
        model=model
        valuePath='email'
        type='email'
      }}

    </div>
    <div class="col s12">
      {{form-input
        label='password'
        model=model
        valuePath='password'
        type='password'
      }}
    </div>
    <div class="col s12 right-align">
      {{#link-to 'auth.password.new'}}
        Forgot Password?
      {{/link-to}}
    </div>
  </div>
  {{form-submit text="Registrarse"}}
</form>