<h1>{{t 'auth.password.edit.title'}}</h1>

<form class="text-center" {{action 'authAction' model on='submit'}}>
  <div class="row">
    <div class="col s12">
      {{#if alertMessage}}
        {{alert-message
          message=alertMessage
          type=alertType}}
      {{/if}}
    </div>
    <div class="col s12">
      {{form-input
        label=(t 'auth.forms.password')
        model=model
        valuePath='password'
        type='password'
      }}
    </div>
    <div class="col s12">
      {{form-input
        label=(t 'auth.forms.passwordConfirmation')
        model=model
        valuePath='passwordConfirmation'
        type='password'
      }}
    </div>
    <div class="col s12">
      {{form-input
        label=(t 'auth.forms.resetPasswordToken')
        model=model
        valuePath='resetPasswordToken'
        type='text'
      }}
    </div>
  </div>
  {{form-submit text=(t 'auth.password.edit.submit')}}
</form>